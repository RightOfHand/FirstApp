<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="List" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:listViewStyle">@style/List</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PopupBottomAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>

</resources>
